# AI-Driven Public Health Chatbot Environment Configuration
# Copy this file to .env and fill in your actual values

# Gemini AI API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Google Translate API Configuration  
GOOGLE_TRANSLATE_KEY=your_google_translate_api_key_here

# Twilio Configuration for WhatsApp/SMS
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# Action Server Configuration
ACTION_SERVER_URL=http://localhost:8000
RASA_SERVER_URL=http://localhost:5005

# Railway Configuration
PORT=8000
RAILWAY_ENVIRONMENT=production

# Health Data APIs (Government Integration)
HEALTH_API_KEY=your_government_health_api_key
HEALTH_API_URL=https://api.government-health.gov.in/v1

# Additional Configuration
LOG_LEVEL=INFO
ENABLE_NLLB=true
ENABLE_HEALTH_ALERTS=true